@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-12">
        <div style="margin: 0 auto;padding-top: 30px; position: relative;">
            <div class="card p-lg-3 shadow-lg p-3 mb-5 rounded " style="margin-left: auto; margin-right: auto; width: 40%; background-color: #FEFEFE; color: #015B42 ">
                <h3 class="text-center">Delete Category</h3><hr />
                <div class="row my-1">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="CategoryName" class="col-form-label col-4"></label>
                    <div class="col-4 pt-2">
                        <label>@Model.CategoryName</label>

                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Discription" class="col-form-label  col-4"></label>
                    <div class="col-8 pt-2">
                        <label>@Model.Discription</label>
                    </div>
                </div>
                <form method="post" asp-action="Delete" asp-controller="Categories" asp-route-CategoryId="@Model.CategoryId">
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" asp-controller="Categories" class="btn btn-success">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>


        @section scripts {
            <script src="~/libs/jquery/jquery.js"></script>
            <script src="~/libs/validate/jquery.validate.js"></script>
            <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
        }

